{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {},
    "test:zenith": {
      "cache": false
    },
    "deploy:zenith": {
      "dependsOn": ["build", "test:zenith"]
    },
    "forge:live": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "weaver": {
      "cache": false
    }
  }
}
